.post {
  text-align: center;
  display: flex;
  flex-direction: column;
}

.image {
  width: 750rpx;
}

.title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-top: 2.5%;
  padding-bottom: 2.5%;
  background-color: rgb(248, 239, 228);
  height: 100rpx;
}

.title .avatar-name {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 2.5%;
}

.title .avatar-name .avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
}

.title .avatar-name .name {
  font-size: 18px;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-weight: 700;
}

.title .btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 7.5%;
  margin-left: 20%;
}

.title .btn .btn1 {
  border: 1px solid #000000;
  border-radius: 20px;
  height: 25pt;
  line-height: 22.5pt;
}

.title .btn .btn1::after {
  border: none
}

.title .btn .btn1 .fo {
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-weight: 700;
  font-size: 12pt;
}

.title .btn .btn2 {
  width: 30pt;
  height: 30pt;
  background-color: rgb(248, 239, 228);
}

.title .btn .btnimg {
  width: 20pt;
  height: 20pt;
  padding-top: 50%;
}

.title .btn .btn2::after {
  border: 0;
}
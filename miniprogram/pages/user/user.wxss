page{
  background: rgb(248, 239, 228);
}

.block {
  display: flex;
  flex-direction: column;
}

.user{
  background-color: black;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 5%;
  padding-bottom: 1%;
}

.user .img{
  border-radius: 80rpx;
  width: 160rpx;
  height: 160rpx;
}

.user .name{
  font-size: 60rpx;
  font-weight: 700;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  color: white;
}

.user .slogan{
  padding-top: 5%;
  color: white;
  font-family: FangSong;
  font-size: 30rpx;
  font-weight: 500;
}

.name-img {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 2.5%;
  padding-bottom: 2.5%;
  padding-left: 5%;
  background-color: rgb(248, 239, 228);
}

.name-img .img {
  width: 30px;
  height: 30px;
  border-radius: 15px;
}

.name-img .name-INS{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding-left: 5%;
  top: 160rpx;
}

.name-img .name {
  font-size: 15px;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-weight: 700;
}

.name-img .INS{
  font-size: 12.5px;
  font-family: 'Times New Roman', Times, serif;
  font-weight: 300;
}

.name-img .btn {
  margin-right: 10%;
  border: 1px solid #000000;
  border-radius: 20px;
  height: 20pt;
  line-height: 16pt;
}

.name-img .btn::after {
  border: none
}

.name-img .btn .fo {
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-weight: 700;
  font-size: 10pt;
}

.divline2{
  background:	#cccccc;
  width: 100%;
  height: 2.5rpx;
 }

 .info{
   font-size: 20px;
   font-weight: 500;
   font-family: Arial, Helvetica, sans-serif;
   color: black;
   text-align: center;
   padding-top: 25%;
 }
/* miniprogram/pages/discover.wxss */
.post {
  text-align: center;
  display: flex;
  flex-direction: column;
}

.image {
  width: 750rpx;
}

.name-img {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 2.5%;
  padding-bottom: 2.5%;
  padding-left: 5%;
  background-color: white;
}

.name-img .img {
  width: 30px;
  height: 30px;
  border-radius: 15px;
}

.name-img .name {
  font-size: 15px;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-weight: 700;
}

.name-img .btn {
  margin-right: 10%;
  border: 1px solid #000000;
  border-radius: 20px;
  height: 20pt;
  line-height: 16pt;
}

.name-img .btn::after {
  border: none
}

.name-img .btn .fo {
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-weight: 700;
  font-size: 10pt;
}

.homepage{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: white;
  text-align: center;
  width: 100%;
}

.homepage .name{
  font-size: 25px;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-weight: 900;
  margin-top: 10rpx;
}

.homepage .INS{
  font-size: 12.5px;
  font-family: 'Times New Roman', Times, serif;
  font-weight: 300;
}

.homepage .name-INS{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding-left: 5%;
  position: absolute;
  z-index: 2;
  top: 160rpx;
}

.homepage .avatar{
  width: 50px;
  height: 50px;
  border-radius: 25px;
}

.homepage .btn{
  margin-right: 5%;
  border: 1px solid #000000;
  border-radius: 20px;
  height: 25pt;
  line-height: 22.5pt;
  margin-top: 70rpx;
  margin-bottom: 80rpx;
}

.homepage .btn::after {
  border: none
}

.homepage .btn .fo {
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-weight: 700;
  font-size: 12pt;
}

.divline1{
  background:	#cccccc;
  width: 100%;
  height: 2.5rpx;
  position: absolute;
  z-index: 1;
  top: 200rpx;
 }

.divline2{

page {
  background: rgb(248, 239, 228);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.profile-img {
  height: 80px;
  width: 80px;
  border-radius: 40px;
}

.home-title {
  font-size: 22pt;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: center;
}

.profile-name{
  font-size: 15px;
  font-family: 'Times New Roman', Times, serif;
  font-weight: 700;
  position: relative;
  top: 7.5px;
}

.name-img{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
}

.profile-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin-top: 30rpx;
}

.profile-row view:nth-of-type(1) {
  flex-grow: 1;
}
 
.profile-row view:nth-of-type(2) {
  flex-grow: 1;
}
 
.profile-row view:nth-of-type(3) {
  flex-grow: 1;
}